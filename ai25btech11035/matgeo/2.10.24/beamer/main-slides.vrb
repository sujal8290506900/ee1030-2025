\frametitle{Python Code for Plotting}
\begin{lstlisting}[language=Python]
# Scatter vertices
plt.scatter(coords[0,:],coords[1,:])
plt.text(A[0],A[1],"A(1,3)")
plt.text(B[0],B[1],"B(0,0)")
plt.text(D[0],D[1],"D(2,0)")
plt.text(D'[0],D'[1],"D'(-2,0)")
# Styling
plt.xlabel('$x$')
plt.ylabel('$y$')
plt.legend(loc='best')
plt.grid(True)
plt.axis('equal')

plt.savefig('../figs/triangle.png')
plt.show()

